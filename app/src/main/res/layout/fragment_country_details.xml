<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailsDrawerLayoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detailsBackgroundContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_black"
        android:fitsSystemWindows="true"
        tools:context="home.view.HomeFragment">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/detailsAnimationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/transparent"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@null"
                app:expandedTitleMarginEnd="26dp"
                app:expandedTitleMarginStart="10dp"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed|snap">

                <ImageView
                    android:id="@+id/detailsitemImageID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/myDetailsToolBarID"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="?attr/colorPrimary"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight">

                    <ImageView
                        android:id="@+id/detailsMenuIconID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="300dp"
                        android:layout_marginBottom="8dp"
                        android:contentDescription="drawer"
                        android:padding="16dp"
                        android:src="@drawable/menu_icon" />

                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:id="@+id/myDetailsTxView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/location_icon"
                    android:drawablePadding="5dp"
                    android:gravity="start"
                    android:padding="16dp"
                    android:text="Your Text"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:layout_collapseMode="pin" />
